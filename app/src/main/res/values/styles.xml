<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppThemeWhite" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/windowBackground</item>
    </style>

    <style name="BaseButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="FilterItem" parent="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666</item>
        <item name="android:onClick">filter</item>
    </style>

    <style name="DriveLensItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="RoProperty">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="PropertyListTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="PropertyListItem">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="GridPropertyToggle" parent="@style/PropertyToggle.Medium" />

    <style name="PropertyToggle.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="PropertyToggle.Medium">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="LiveViewContinueButton">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="PropertyToggle">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:layout_width">@dimen/gridPropertyWidth</item>
        <item name="android:layout_height">@dimen/gridPropertyHeight</item>
        <item name="android:gravity">center</item>
        <item name="android:text">" "</item>
    </style>

    <style name="StreamItemLabel">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Theme.RYC" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Theme.ActionBar.RYC</item>
    </style>

    <style name="Theme.ActionBar.RYC" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionBarBackground</item>
    </style>

</resources>
